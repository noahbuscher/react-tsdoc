{
	"compilerOptions": {
		"esModuleInterop": true,
		"moduleResolution": "node",
		"target": "es6",
		"module": "es6",
		"outDir": "./lib",
		"strict": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"strictPropertyInitialization": false,
		"suppressImplicitAnyIndexErrors": true,
		"types": ["jest", "node"],
		"typeRoots": ["node_modules/@types"]
	},
	"include": ["src/**/*"],
	"exclude": [
		"node_modules",
		"**/*.spec.ts",
		"**/*.test.ts"
	]
}
